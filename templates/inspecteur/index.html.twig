{% extends 'base.html.twig' %}

{% block title %}Inspecteur index{% endblock %}

{% block body %}
    <h1>Inspecteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inspecteur in inspecteurs %}
            <tr>
                <td>{{ inspecteur.id }}</td>
                <td>{{ inspecteur.nom }}</td>
                <td>{{ inspecteur.prenom }}</td>
                <td>{{ inspecteur.contact }}</td>
                <td>
                    <a href="{{ path('app_inspecteur_show', {'id': inspecteur.id}) }}">show</a>
                    <a href="{{ path('app_inspecteur_edit', {'id': inspecteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inspecteur_new') }}">Create new</a>
{% endblock %}
