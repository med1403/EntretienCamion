{% extends 'inspection/base.html.twig' %}

{% block title %}Inspection{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0"><i class="fas fa-info-circle"></i> Détails Inspection</h1>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ inspection.id }}</td>
                    </tr>
                    <tr>
                        <th>Date Inspection</th>
                        <td>{{ inspection.dateInspection ? inspection.dateInspection|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Résultat</th>
                        <td>{{ inspection.resultat ? 'Positif' : 'Négatif' }}</td>
                    </tr>
                    <tr>
                        <th>Commentaire</th>
                        <td>{{ inspection.commentaire }}</td>
                    </tr>
                    <tr>
                        <th>Inspecteur</th>
                        <td>{{ inspection.inspecteur.nom }}</td>
                    </tr>
                    <tr>
                        <th>Camion</th>
                        <td>
                            {% for camion in inspection.camion %}
                                {{ camion.marque }} - {{ camion.modele }}<br>
                            {% endfor %}
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_inspection_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_inspection_edit', {'id': inspection.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    {{ include('inspection/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
