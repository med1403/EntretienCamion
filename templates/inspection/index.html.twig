{% extends 'inspection/base.html.twig' %}

{% block title %}Inspection index{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-list"></i> Liste d'Inspection</h1>

        <form method="get" action="{{ path('app_inspection_index') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Rechercher...">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i> Rechercher</button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Inspection</th>
                    <th>Résultat</th>
                    <th>Categorie Camion</th>
                    <th>Type de Camion</th>
                    <th>Commentaire</th>
                    <th>Inspecteur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for inspection in inspections %}
                    <tr>
                        <td>{{ inspection.id }}</td>
                        <td>{{ inspection.dateInspection ? inspection.dateInspection|date('Y-m-d') : '' }}</td>
                        <td>{{ inspection.resultat ? 'Passé' : 'Échoué' }}</td>
                        <td>{{ inspection.camion.typeCamion.nom }}</td>
                        <td>{{ inspection.camion.categorie.nom }}</td>
                        <td>{{ inspection.commentaire }}</td>
                        <td>{{ inspection.inspecteur ? inspection.inspecteur.nom : '' }}</td>
                        <td>
                            <a href="{{ path('app_inspection_show', {'id': inspection.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_inspection_edit', {'id': inspection.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <form method="post" action="{{ path('app_inspection_delete', {'id': inspection.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inspection.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune Inspection </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_inspection_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Engistrer 
        </a>
    </div>
{% endblock %}
