{% extends 'controleur/base.html.twig' %}

{% block title %}Nouveau Contrôleur{% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border-radius: 0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            function flatpickr(s, param2) {

            }

            flatpickr(".js-datepicker", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="card mt-5 shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h3 class="mb-0"><i class="fas fa-plus-circle"></i> Nouveau Contrôleur</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter le nom'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.adresse) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Enter l\'adresse'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.numeroDeTel) }}
                {{ form_widget(form.numeroDeTel, {'attr': {'class': 'form-control', 'placeholder': 'Enter le numéro de téléphone'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.adresseEmail) }}
                {{ form_widget(form.adresseEmail, {'attr': {'class': 'form-control', 'placeholder': 'Enter l\'adresse email'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.numeroDeBadge) }}
                {{ form_widget(form.numeroDeBadge, {'attr': {'class': 'form-control', 'placeholder': 'Enter le numéro de badge'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.dateDeNaissance) }}
                {{ form_widget(form.dateDeNaissance, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'Enter la date de naissance'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.categoriesPermis) }}
                {{ form_widget(form.categoriesPermis, {'attr': {'class': 'form-control', 'placeholder': 'Enter les catégories de permis'}}) }}
            </div>
            <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            {{ form_end(form) }}
            <a href="{{ path('app_controleur_index') }}" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>
{% endblock %}
