{% extends 'controleur/base.html.twig' %}

{% block title %}Liste des Contrôleurs{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-list"></i> Liste des Contrôleurs</h1>

        <form method="get" action="{{ path('app_controleur_index') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Rechercher...">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i> Rechercher</button>
                </div>
            </div>
        </form>
        <a href="{{ path('app_controleur_new') }}" class="btn btn-success mb-3">
            <i class="fas fa-plus-circle"></i> Ajouter
        </a>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Numéro de Téléphone</th>
                    <th>Adresse Email</th>
                    <th>Numéro de Badge</th>
                    <th>Date de Naissance</th>
                    <th>Catégories de Permis</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for controleur in controleurs %}
                    <tr>
                        <td>{{ controleur.id }}</td>
                        <td>{{ controleur.nom }}</td>
                        <td>{{ controleur.adresse }}</td>
                        <td>{{ controleur.numeroDeTel }}</td>
                        <td>{{ controleur.adresseEmail }}</td>
                        <td>{{ controleur.numeroDeBadge }}</td>
                        <td>{{ controleur.dateDeNaissance|date('Y-m-d') }}</td>
                        <td>{{ controleur.categoriesPermis }}</td>
                        <td>
                            <a href="{{ path('app_controleur_show', {'id': controleur.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_controleur_edit', {'id': controleur.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('app_controleur_delete', {'id': controleur.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controleur.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
    </div>
{% endblock %}
