{% extends 'reparation/base.html.twig' %}

{% block title %}Reparation index{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-list"></i> Liste de Réparation</h1>

        <form method="get" action="{{ path('app_reparation_index') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Rechercher...">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i> Rechercher</button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Réparation</th>
                    <th>Description</th>
                    <th>Coût</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reparation in reparations %}
                    <tr>
                        <td>{{ reparation.id }}</td>
                        <td>{{ reparation.dateReparation ? reparation.dateReparation|date('Y-m-d') : '' }}</td>
                        <td>{{ reparation.description }}</td>
                        <td>{{ reparation.cout }}</td>
                        <td>
                            <a href="{{ path('app_reparation_show', {'id': reparation.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_reparation_edit', {'id': reparation.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <form method="post" action="{{ path('app_reparation_delete', {'id': reparation.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reparation.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune donnée trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_reparation_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Créer un nouveau
        </a>
    </div>
{% endblock %}
