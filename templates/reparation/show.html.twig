{% extends 'reparation/base.html.twig' %}

{% block title %}Réparation{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0"><i class="fas fa-info-circle"></i> Détails Réparation</h1>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reparation.id }}</td>
                    </tr>
                    <tr>
                        <th>Date Réparation</th>
                        <td>{{ reparation.dateReparation ? reparation.dateReparation|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ reparation.description }}</td>
                    </tr>
                    <tr>
                        <th>Coût</th>
                        <td>{{ reparation.cout }}</td>
                    </tr>
                    <tr>
                        <th>Incident</th>
                        <td>{{ reparation.incident ? reparation.incident.description : 'N/A' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_reparation_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_reparation_edit', {'id': reparation.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    {{ include('reparation/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
