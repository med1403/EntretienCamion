{% extends 'reparation/base.html.twig' %}

{% block title %}Modifier Réparation{% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border-radius: 0;
        }
        .delete {
            border: 1px solid black;
            width: 150px;
            border-radius: 5px;
            background-color: red;
            color: white;
            height: 40px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr(".js-datepicker", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0"><i class="fas fa-edit"></i> Modifier Réparation</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.dateReparation) }}
                    {{ form_widget(form.dateReparation, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'Enter la date de réparation'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter la description'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.cout) }}
                    {{ form_widget(form.cout, {'attr': {'class': 'form-control', 'placeholder': 'Enter le coût'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.incident) }}
                    {{ form_widget(form.incident, {'attr': {'class': 'form-control', 'placeholder': 'Select the incident'}}) }}
                </div>
                <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
                {{ form_end(form) }}
                <a href="{{ path('app_reparation_index') }}" class="btn btn-secondary mt-3">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <div class="delete btn btn-danger mt-3">
                    {{ include('reparation/_delete_form.html.twig', { 'class': 'd-inline' }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
