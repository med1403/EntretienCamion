{% extends 'base.html.twig' %}

{% block title %}Affectation index{% endblock %}

{% block stylesheets %}
    {# Include Bootstrap CSS if not already included in your base.html.twig #}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Affectation Index</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Date Debut</th>
                    <th>Date Fin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for affectation in affectations %}
                <tr>
                    <td>{{ affectation.id }}</td>
                    <td>{{ affectation.dateDebut ? affectation.dateDebut|date('Y-m-d') : '' }}</td>
                    <td>{{ affectation.dateFin ? affectation.dateFin|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_affectation_show', {'id': affectation.id}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_affectation_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create New
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {# Include Bootstrap JS and dependencies if not already included in your base.html.twig #}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
