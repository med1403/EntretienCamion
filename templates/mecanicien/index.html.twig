{% extends 'base.html.twig' %}

{% block title %}Mecanicien index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Gestion des Mecaniciens !</h1>
        <div class="mb-3 text-left">
            <a href="{{ path('app_mecanicien_new') }}" class="btn btn-success fa fa-plus">Ajout</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Contact</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mecanicien in mecaniciens %}
                <tr>
                    <td>{{ mecanicien.id }}</td>
                    <td>{{ mecanicien.nom }}</td>
                    <td>{{ mecanicien.prenom }}</td>
                    <td>{{ mecanicien.adresse }}</td>
                    <td>{{ mecanicien.contact }}</td>
                    <td class="td-responsive">
                        <div class="d-flex flex-wrap justify-content-center align-items-center">
                            <a href="{{ path('app_mecanicien_edit', {'id': mecanicien.id}) }}" class="btn btn-warning btn-sm mb-1 mr-1">Modifier</a>
                            {{ include('mecanicien/_delete_form.html.twig', { 'id': mecanicien.id }) }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun Mecanicien n'est Enregistrer !</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
