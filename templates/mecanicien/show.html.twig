{% extends 'base.html.twig' %}

{% block title %}Mecanicien{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Mecanicien</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ mecanicien.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ mecanicien.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ mecanicien.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ mecanicien.adresse }}</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td>{{ mecanicien.contact }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3 d-flex flex-wrap">
            <a href="{{ path('app_mecanicien_index') }}" class="btn btn-secondary mr-2">Retour</a>
            <a href="{{ path('app_mecanicien_edit', {'id': mecanicien.id}) }}" class="btn btn-primary mr-2">Modifier</a>
            {{ include('mecanicien/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
