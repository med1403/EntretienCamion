{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mt-5 shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">Search Incidents</h3>
        </div>
        <div class="card-body">
            <form method="get" action="{{ path('incident_search') }}">
                <div class="form-group">
                    <input type="text" name="criteria" class="form-control" placeholder="Search criteria">
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <ul class="list-group mt-4">
                {% for incident in incidents %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('incident_show', {id: incident.id}) }}">
                            {{ incident.description }}
                        </a>
                        <span class="badge badge-primary badge-pill">{{ incident.date|date('Y-m-d') }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
