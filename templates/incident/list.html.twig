{% extends 'base.html.twig' %}
{% block title %}Liste d'Incident{% endblock %}
{% block stylesheets %}
    <style>
        .card {
            border-radius: 0;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="card mt-5 shadow-sm">
        <div class="card-header">
            <h3 class="mb-0"><i class="fa fa-list-alt"></i> Liste d'Incident</h3>
        </div>
        <div class="card-body">
            <ul class="list-group">
                {% for incidence in incidences %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('incident_show', {id: incidence.id}) }}">
                            {{ incidence.description }}
                        </a>
                        <span class="badge badge-primary badge-pill">{{ incidence.type }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
