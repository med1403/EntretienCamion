{% extends 'chauffeur/base.html.twig' %}

{% block title %}Chauffeur index
{% endblock %}

{% block stylesheets %}
	<style>
		.table th,
		.table td {
			vertical-align: middle;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">
			<i class="fas fa-list"></i>
			Liste des Chauffeurs</h1>

		<form method="get" action="{{ path('app_chauffeur_index') }}" class="mb-4">
			<div class="input-group">
				<input type="text" name="search" class="form-control" placeholder="Rechercher...">
				<div class="input-group-append">
					<button class="btn btn-secondary" type="submit">
						<i class="fa fa-search"></i>
						Rechercher</button>
				</div>
			</div>
		</form>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Contact</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for chauffeur in chauffeurs %}
						<tr>
							<td>{{ chauffeur.id }}</td>
							<td>{{ chauffeur.nom }}</td>
							<td>{{ chauffeur.prenom }}</td>
							<td>{{ chauffeur.contact }}</td>
							<td>
								<a href="{{ path('app_chauffeur_show', {'id': chauffeur.id}) }}" class="btn btn-info btn-sm">
									<i class="fas fa-eye"></i>
								</a>
								<a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}" class="btn btn-primary btn-sm">
									<i class="fas fa-edit"></i>
								</a>
								<form method="post" action="{{ path('app_chauffeur_delete', {'id': chauffeur.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chauffeur.id) }}">
									<button class="btn btn-danger btn-sm">
										<i class="fas fa-trash-alt"></i>
									</button>
								</form>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucun chauffeur enregistré pour le moment!</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a href="{{ path('app_chauffeur_new') }}" class="btn btn-success mb-2">
			<i class="fas fa-plus-circle"></i>
			Créer un nouveau
		</a>

	</div>
{% endblock %}
