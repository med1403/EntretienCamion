{% extends 'graissage/base.html.twig' %}

{% block title %}Modifier Graissage{% endblock %}

{% block stylesheets %}
    <style>
        .card {
            border-radius: 0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr(".js-datepicker", {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="card mt-5 shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h3 class="mb-0"><i class="fas fa-edit"></i> Modifier Graissage</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.dateGraissage) }}
                {{ form_widget(form.dateGraissage, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'Entrez la date de graissage'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.kmGraissage) }}
                {{ form_widget(form.kmGraissage, {'attr': {'class': 'form-control', 'placeholder': 'Entrez les kilomètres de graissage'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.ecartType) }}
                {{ form_widget(form.ecartType, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'écart type'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.nbKmRestant) }}
                {{ form_widget(form.nbKmRestant, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nombre de kilomètres restants'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.camion) }}
                {{ form_widget(form.camion, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez le camion'}}) }}
            </div>
            <button class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            {{ form_end(form) }}
            <a href="{{ path('app_graissage_index') }}" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>
{% endblock %}
