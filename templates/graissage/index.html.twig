{% extends 'base.html.twig' %}

{% block title %}Graissage index{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-list"></i> Liste de Graissage</h1>

        <form method="get" action="{{ path('app_graissage_index') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Rechercher...">
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i> Rechercher</button>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Graissage</th>
                    <th>Km Graissage</th>
                    <th>Ecart Type</th>
                    <th>Nb Km Restant</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for graissage in graissages %}
                    <tr>
                        <td>{{ graissage.id }}</td>
                        <td>{{ graissage.dateGraissage ? graissage.dateGraissage|date('Y-m-d') : '' }}</td>
                        <td>{{ graissage.kmGraissage }}</td>
                        <td>{{ graissage.ecartType }}</td>
                        <td>{{ graissage.nbKmRestant }}</td>
                        <td>
                            <a href="{{ path('app_graissage_show', {'id': graissage.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_graissage_edit', {'id': graissage.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> 
                            </a>
                            <form method="post" action="{{ path('app_graissage_delete', {'id': graissage.id}) }}" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ graissage.id) }}">
                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_graissage_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> CrÃ©er un nouveau
        </a>
    </div>
{% endblock %}
