{% extends 'admin/base.html.twig' %}
{% block contenu %}
{% block title %}ListPiece index{% endblock %}

    <h1>ListPiece index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Prix_total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for list_piece in list_pieces %}
            <tr>
                <td>{{ list_piece.id }}</td>
                <td>{{ list_piece.quantite }}</td>
                <td>{{ list_piece.prixTotal }}</td>
                <td>
                    <a href="{{ path('app_list_piece_show', {'id': list_piece.id}) }}">show</a>
                    <a href="{{ path('app_list_piece_edit', {'id': list_piece.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_list_piece_new') }}">Create new</a>
{% endblock %}
