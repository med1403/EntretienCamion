{% extends 'base.html.twig' %}

{% block title %}Assurance index{% endblock %}

{% block stylesheets %}
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-list"></i> Liste d'Assurance</h1>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Debut</th>
                    <th>Date Fin</th>
                    <th>Compagnie</th>
                    <th>Num Police</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for assurance in assurances %}
                    <tr>
                        <td>{{ assurance.id }}</td>
                        <td>{{ assurance.dateDebut ? assurance.dateDebut|date('Y-m-d') : '' }}</td>
                        <td>{{ assurance.dateFin ? assurance.dateFin|date('Y-m-d') : '' }}</td>
                        <td>{{ assurance.compagnie }}</td>
                        <td>{{ assurance.numPolice }}</td>
                        <td>
                            <a href="{{ path('app_assurance_show', {'id': assurance.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Afficher
                            </a>
                            <a href="{{ path('app_assurance_edit', {'id': assurance.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_assurance_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Cr√©er un nouveau
        </a>
    </div>
{% endblock %}
