{% extends 'base.html.twig' %}

{% block title %}Liste des Contrôleurs{% endblock %}

{% block body %}
    <h1>Liste des Contrôleurs</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Numéro de Tel</th>
                <th>Adresse Email</th>
                <th>Numéro de Badge</th>
                <th>Date de Naissance</th>
                <th>Catégories de Permis de Conduire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for controleur in controleurs %}
            <tr>
                <td>{{ controleur.id }}</td>
                <td>{{ controleur.nom }}</td>
                <td>{{ controleur.adresse }}</td>
                <td>{{ controleur.numeroDeTel }}</td>
                <td>{{ controleur.adresseEmail }}</td>
                <td>{{ controleur.numeroDeBadge }}</td>
                <td>{{ controleur.dateDeNaissance ? controleur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ controleur.categoriesPermis }}</td>
                <td>
                    <a href="{{ path('truck_maintenance_edit', {'id': controleur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <form method="post" action="{{ path('truck_maintenance_delete', {'id': controleur.id}) }}" style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controleur.id) }}">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('truck_maintenance_new') }}" class="btn btn-success">Créer un nouveau contrôleur</a>
{% endblock %}
